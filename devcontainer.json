{
  "name": "generate-a-blog-with-openai",
  "image": "python:3.9",
  "features": {
    "ghcr.codespaces/code": true,
    "ghcr.codespaces/git-lens": true,
    "ghcr.codespaces/terminal": true
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "esbenp.prettier-vscode",
    "vscode-icons-team.vscode-icons"
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [8000]
}
